<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
            android:text="pool data editor:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


        <TextView
                android:text="date"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="10"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="2023-06-20"
                android:id="@+id/editTextDate"
                android:inputType="date"
                android:layout_weight="12"/>

        <Button
                android:text="today"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/today"
                android:layout_weight="8"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


        <TextView
                android:text="height (m)"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="5.32"
                android:inputType="numberDecimal|numberSigned"
                android:id="@+id/editTextHeight"
                android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


        <TextView
                android:text="volume (m\u00B3)"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="5.32"
                android:inputType="numberDecimal|numberSigned"
                android:id="@+id/editTextVolume"
                android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


        <TextView
                android:text="temperature (Â°C)"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="24"
                android:inputType="numberDecimal|numberSigned"
                android:id="@+id/editTextTemperature"
                android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


        <TextView
                android:text="pH"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="8.6"
                android:inputType="numberDecimal|numberSigned"
                android:id="@+id/editTextPh"
                android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


        <TextView
                android:text="pH change (g)"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="50"
                android:inputType="numberDecimal|numberSigned"
                android:id="@+id/editTextPhChanger"
                android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


        <TextView
                android:text="oxygen (g)"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="250"
                android:inputType="numberDecimal|numberSigned"
                android:id="@+id/editTextOxygen"
                android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


        <TextView
                android:text="activator (ml)"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="180"
                android:inputType="numberDecimal|numberSigned"
                android:id="@+id/editTextActivator"
                android:layout_weight="2"/>
    </LinearLayout>

<!--    <TextView-->
<!--            android:text="\u2800"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content" />-->

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="\u2800"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <Button
                android:text="delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/delete"
                android:layout_weight="2"/>

        <TextView
                android:text="\u2800"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <Button
                android:text="update"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/update"
                android:layout_weight="2"/>

        <TextView
                android:text="\u2800"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>